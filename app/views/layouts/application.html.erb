<!DOCTYPE html>
<html>
  <head>
    <title>Daysofcode</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-default bg-dark">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand text-white">#100DaysOfCode</a>
        </div>
        <ul class="nav ml-auto">
          <% if @current_user %>
          <li class="nav-item">
            <%= link_to '投稿一覧', posts_path, class: 'nav-link text-white' %>
          </li>
          <li class="nav-item mr-4">
            <%= link_to new_post_path, method: :get do %>
              <i class="far fa-edit text-white p-2 mt-1">投稿する</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link text-white' %>
          </li>
          <% else %>
          <li class="nav-item">
            <%= link_to 'ログイン', login_path, class: 'nav-link text-white' %>
          </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
