<p><%= flash[:notice] %></p>
<div class="container mt-5">
  <h1 class="my-5 w-25 mx-auto text-center border-bottom">投稿一覧</h1>
  <%= link_to '新規投稿', new_post_path, class: 'btn btn-primary'%>
  <table class="table table-hover mt-5">
    <% @posts.each do | post | %>
    <tr>
      <td>
        <%= link_to post.user.name, user_path(post.user_id), class: 'text-dark' %>
      </td>
      <td>
        <%= link_to post.content, post_path(post), class: 'text-dark' %>
      </td>
      <td class="w-25 text-right">
        <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
      </td>
    </tr>
    <% end %>
  </table>
</div>