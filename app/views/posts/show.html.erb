<div class="wrapper">
  <div class="container">
    <div class="mt-5 d-flex justify-content-center">
      <h2 class="p-2 font-weight-normal">
        <%= @post.user.name %>
      </h2>
      <div>
        <p class="mt-3 p-1 text-muted">
          <%= @post.created_at.strftime("%Y年%-m月%-d日")%>に投稿
        </p>
      </div>
      <% if @current_user.id == @post.user.id %>
      <%= link_to edit_post_path(@post), method: :get do %>
      <i class="fas fa-pencil-alt text-muted p-1 mt-3 ml-5"></i>
      <% end %>
      <%= link_to post_path, method: :delete, data: { confirm: "投稿を削除します。よろしいですか？"} do %>
      <i class="far fa-trash-alt text-muted p-1 mt-3 ml-2"></i>
      <% end %>
      <% end %>
    </div>
    <div class="d-flex flex-wrap w-50 mx-auto justify-content-between">
      <p class="p-1">HTML&nbsp;<%= @post.html %>時間</p>
      <p class="p-1">CSS&nbsp;<%= @post.css %>時間</p>
      <p class="p-1">JavaScript&nbsp;<%= @post.javascript %>時間</p>
      <p class="p-1">jQuery&nbsp;<%= @post.jquery %>時間</p>
      <p class="p-1">Ruby&nbsp;<%= @post.ruby %>時間</p>
      <p class="p-1">Rails&nbsp;<%= @post.rails %>時間</p>
      <p class="p-1">PHP&nbsp;<%= @post.php %>時間</p>
      <p class="p-1">Java&nbsp;<%= @post.java %>時間</p>
      <p class="p-1">Go&nbsp;<%= @post.go %>時間</p>
      <p class="p-1">Python&nbsp;<%= @post.python %>時間</p>
      <p class="p-1">Swift&nbsp;<%= @post.html %>時間</p>
    </div>
    <div class="w-50 mt-4  mx-auto border rounded" style="height: 200px;">
      <p class="p-2 font-weight-normal" style="margin-bottom: 0;">
        <%= @post.content%>
      </p>
    </div>
    <div class="mt-2 w-50 mx-auto">
      <%= link_to '戻る', posts_path, class: 'text-dark p-1'%>
    </div>
  </div>
  <%= render partial: 'home/footer' %>
</div>
