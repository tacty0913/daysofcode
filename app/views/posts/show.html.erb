<div class="container">
  <div class="pt-5"></div>
  <div class="mt-5 d-flex justify-content-center">
    <h2 class="p-2 font-weight-normal">
      <%= @post.user.name %>
    </h2>
    <div>
      <p class="mt-3 p-1 text-muted">
        <%= @post.created_at.strftime("%Y年%-m月%-d日")%>に投稿
      </p>
    </div>
    <% if @current_user.id == @post.user.id %>
      <%= link_to edit_post_path(@post), method: :get do %>
      <i class="fas fa-pencil-alt text-muted p-1 mt-3 ml-5"></i>
      <% end %>
      <%= link_to post_path, method: :delete, data: { confirm: "投稿を削除します。よろしいですか？"} do %>
        <i class="far fa-trash-alt text-muted p-1 mt-3 ml-2"></i>
      <% end %>
    <% end %>
  </div>
  <div class="w-50 mt-4  mx-auto border rounded" style="height: 200px;">
    <p class="p-3 h5 font-weight-normal" style="margin-bottom: 0;">
      <%= @post.content%>
    </p>
  </div>
  <div class="mt-2 w-50 mx-auto text-right">
    <%= link_to 'back', posts_path, class: 'text-dark p-1'%>
  </div>
</div>