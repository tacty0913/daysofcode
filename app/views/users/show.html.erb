<div class="container mt-5">
  <div class="d-flex">
    <div class="user-name w-25">
      <h2 class="pl-2 pb-2 font-weight-normal border-bottom"><%= @user.name %></h2>
      <p class="pb-2 border-bottom text-muted"><i class="fas fa-cog"></i>&nbsp;プロフィールを変更</p>
    </div>
    <div class="post-index w-75 mt-5 ml-5">
      <table class="table table-hover">
        <% @posts.each do | post | %>
        <tr>
          <td>
            <%= link_to post.content, post_path(post), class: 'text-dark' %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>