<div class="wrapper">
  <div class="container mt-5">
    <div class="d-flex">
      <div class="user-name w-25">
        <h2 class="pl-2 pb-2 font-weight-normal border-bottom"><%= @user.name %></h2>
        <div class="pb-2 border-bottom text-muted">
          <i class="fas fa-cog">
            <%= link_to '&nbsp;プロフィールを編集する'.html_safe, edit_user_path(@user.id), class: 'text-muted'%>
          </i>
        </div>
      </div>
      <div class="post-index w-75 mt-3 ml-5">
        <canvas id="myChart" width="200" height="100"></canvas>
        <table class="table table-striped mt-5">
          <% @posts.each do | post | %>
          <tr>
            <td>
              <%= link_to post.content, post_path(post), class: 'text-dark' %>
            </td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  <%= render partial: 'home/footer' %>
</div>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: ["HTML", "CSS", "JavaScript", "jQuery", "Ruby", "Rails", "PHP", "Java", "Go", "Python", "Swift"],
        datasets: [{
            label: '勉強時間',
            data: gon.data,
            backgroundColor: [
                'rgba(75, 192, 110, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 0, 0, 0.2)',
                'rgba(255, 0, 102, 0.2)',
                'rgba(102, 0, 204, 0.2)',
                'rgba(102, 51, 0, 0.2)',
                'rgba(0, 250, 154, 0.2)',
                'rgba(0, 255, 255, 0.2)',
                'rgba(255, 140, 0, 0.2)'
            ],
            borderColor: [
                'rgba(75, 192, 110, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 0, 0, 1)',
                'rgba(255, 0, 102, 1)',
                'rgba(102, 0, 204, 1)',
                'rgba(102, 51, 0, 1)',
                'rgba(0, 250, 154, 1)',
                'rgba(0, 255, 255, 1)',
                'rgba(255, 140, 0, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
      responsive: true, 
        scales: {
            yAxes: [{
                ticks: {
                  min: 0,
                  max: 100,
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
